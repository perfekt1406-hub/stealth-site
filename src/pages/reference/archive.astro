---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GameGrid from '../../components/GameGrid.astro';
---

<BaseLayout 
  title="Archive - LearningHub"
  description="Browse our collection of learning resources"
>
  <header>
    <nav>
      <a href="/">‚Üê Back to LearningHub</a>
    </nav>
    <h1>Archive</h1>
    <p>Browse our collection of learning resources</p>
  </header>

  <main>
    <GameGrid />
  </main>
</BaseLayout>

<script>
  import { initRouter } from '../../scripts/router';
  
  // Initialize router when page loads
  if (typeof window !== 'undefined') {
    initRouter();
  }
</script>

<style>
  nav {
    margin: 0 auto clamp(0.75rem, 2vw, 1rem);
    text-align: center;
    max-width: var(--max-content-width, min(1200px, 90vw));
    width: 100%;
    padding: 0 var(--spacing-unit, clamp(0.5rem, 2vw, 1rem));
    box-sizing: border-box;
  }

  nav a {
    color: var(--accent, #0066cc);
    text-decoration: none;
    font-size: clamp(0.9rem, 2vw, 1rem);
  }

  nav a:hover {
    text-decoration: underline;
  }

  .archive-placeholder {
    max-width: min(800px, 90vw);
    margin: 0 auto;
    padding: clamp(1.5rem, 3vw, 2rem);
    background: white;
    border-radius: clamp(4px, 0.5vw, 8px);
    box-shadow: 0 clamp(2px, 0.3vw, 4px) clamp(4px, 0.6vw, 6px) rgba(0, 0, 0, 0.1);
    text-align: center;
    box-sizing: border-box;
  }

  .archive-placeholder p {
    color: #000000;
    font-size: clamp(0.9rem, 2vw, 1rem);
    margin: 0 auto;
  }
</style>
