---
interface Props {
  id: string;
  title: string;
  category: string;
  url: string;
  thumbnail?: string;
  description: string;
}

const { id, title, category, url, thumbnail, description } = Astro.props;
---

<div class="game-card" data-game-id={id} data-game-category={category.toLowerCase()}>
  <div class="game-info">
    <h3>{title}</h3>
    <p>{description}</p>
    <button class="play-button" data-game-url={url} data-game-title={title}>
      Play Now
    </button>
  </div>
</div>

<style>
  .game-card {
    background: white;
    border-radius: clamp(6px, 0.8vw, 8px);
    overflow: hidden;
    box-shadow: 0 clamp(2px, 0.3vw, 4px) clamp(6px, 1vw, 8px) rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
    width: 100%;
    aspect-ratio: 1 / 1;
    margin: 0 auto;
    box-sizing: border-box;
  }

  .game-card:hover {
    transform: translateY(clamp(-3px, -0.5vw, -4px));
    box-shadow: 0 clamp(4px, 0.6vw, 6px) clamp(10px, 1.5vw, 12px) rgba(0, 0, 0, 0.15);
  }

  .game-info {
    padding: clamp(0.75rem, 1.5vw, 1rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    box-sizing: border-box;
    gap: clamp(0.5rem, 1vw, 0.75rem);
    height: 100%;
    justify-content: space-between;
  }

  .game-info h3 {
    margin: 0;
    color: #000000;
    font-size: clamp(1rem, 2vw, 1.15rem);
    text-align: center;
    width: 100%;
    line-height: 1.3;
    flex-shrink: 0;
  }

  .game-info p {
    margin: 0;
    color: #000000;
    font-size: clamp(0.8rem, 1.6vw, 0.9rem);
    text-align: center;
    width: 100%;
    line-height: 1.4;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    flex: 1;
    min-height: 0;
  }

  .play-button {
    background: var(--accent, #0066cc);
    color: white;
    border: none;
    padding: clamp(0.5rem, 1.2vw, 0.65rem) clamp(1rem, 2.5vw, 1.25rem);
    border-radius: clamp(4px, 0.5vw, 8px);
    cursor: pointer;
    font-size: clamp(0.85rem, 1.8vw, 1rem);
    font-weight: 600;
    transition: background 0.2s, transform 0.2s;
    width: 100%;
    max-width: 100%;
    margin: 0;
    box-sizing: border-box;
    min-height: clamp(36px, 4.5vw, 40px);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .play-button:hover {
    background: #0052a3;
    transform: scale(1.02);
  }

  .play-button:active {
    transform: scale(0.98);
  }
</style>

