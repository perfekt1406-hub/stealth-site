---
interface Props {
  id: string;
  title: string;
  category: string;
  url: string;
  thumbnail?: string;
  description: string;
}

const { id, title, category, url, thumbnail, description } = Astro.props;
---

<div class="game-card" data-game-id={id}>
  <div class="game-thumbnail">
    {thumbnail ? (
      <>
        <img 
          src={thumbnail} 
          alt={title} 
          loading="lazy"
        />
        <div class="game-placeholder" style="display: none;">
          <span>{title}</span>
        </div>
      </>
    ) : (
      <div class="game-placeholder">
        <span>{title}</span>
      </div>
    )}
    <div class="game-category">{category}</div>
  </div>
  <div class="game-info">
    <h3>{title}</h3>
    <p>{description}</p>
    <button class="play-button" data-game-url={url} data-game-title={title}>
      Play Now
    </button>
  </div>
</div>

<style>
  .game-card {
    background: white;
    border-radius: clamp(6px, 0.8vw, 8px);
    overflow: hidden;
    box-shadow: 0 clamp(2px, 0.3vw, 4px) clamp(6px, 1vw, 8px) rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    box-sizing: border-box;
  }

  .game-card:hover {
    transform: translateY(clamp(-3px, -0.5vw, -4px));
    box-shadow: 0 clamp(4px, 0.6vw, 6px) clamp(10px, 1.5vw, 12px) rgba(0, 0, 0, 0.15);
  }

  .game-thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f0f0f0;
    flex-shrink: 0;
    margin: 0;
  }

  .game-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .game-thumbnail img[style*="display: none"] {
    display: none !important;
  }

  .game-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-weight: bold;
    text-align: center;
    padding: clamp(0.75rem, 2vw, 1rem);
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    box-sizing: border-box;
  }

  .game-category {
    position: absolute;
    top: clamp(0.4rem, 1vw, 0.5rem);
    right: clamp(0.4rem, 1vw, 0.5rem);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: clamp(0.2rem, 0.6vw, 0.25rem) clamp(0.6rem, 1.5vw, 0.75rem);
    border-radius: clamp(3px, 0.4vw, 4px);
    font-size: clamp(0.65rem, 1.4vw, 0.75rem);
    font-weight: 600;
    text-transform: uppercase;
    margin: 0;
  }

  .game-info {
    padding: clamp(0.5rem, 1.2vw, 0.75rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    box-sizing: border-box;
    gap: clamp(0.4rem, 1vw, 0.5rem);
  }

  .game-info h3 {
    margin: 0;
    color: #000000;
    font-size: clamp(1rem, 2.2vw, 1.25rem);
    text-align: center;
    width: 100%;
    line-height: 1.2;
  }

  .game-info p {
    margin: 0;
    color: #000000;
    font-size: clamp(0.85rem, 1.8vw, 0.9rem);
    text-align: center;
    width: 100%;
    line-height: 1.3;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .play-button {
    background: var(--accent, #0066cc);
    color: white;
    border: none;
    padding: clamp(0.6rem, 1.5vw, 0.75rem) clamp(1.2rem, 3vw, 1.5rem);
    border-radius: clamp(4px, 0.5vw, 8px);
    cursor: pointer;
    font-size: clamp(0.9rem, 2.2vw, 1.1rem);
    font-weight: 600;
    transition: background 0.2s, transform 0.2s;
    width: 100%;
    max-width: 100%;
    margin: 0;
    box-sizing: border-box;
    min-height: clamp(40px, 5vw, 44px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .play-button:hover {
    background: #0052a3;
    transform: scale(1.02);
  }

  .play-button:active {
    transform: scale(0.98);
  }
</style>

<script>
  // Image load error handling - show placeholder if image fails to load
  document.addEventListener('DOMContentLoaded', () => {
    const gameCards = document.querySelectorAll('.game-card');
    gameCards.forEach((card) => {
      const img = card.querySelector('.game-thumbnail img') as HTMLImageElement;
      if (img) {
        img.addEventListener('error', () => {
          img.style.display = 'none';
          const placeholder = card.querySelector('.game-placeholder') as HTMLElement;
          if (placeholder) {
            placeholder.style.display = 'flex';
          }
        });
      }
    });
  });
</script>
